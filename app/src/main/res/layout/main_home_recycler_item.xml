<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_cover"
        android:background="#213a22"
        android:layout_margin="@dimen/main_img_margin"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_marginLeft="@dimen/main_img_margin"
        android:layout_marginRight="@dimen/main_img_margin"
        android:layout_marginBottom="@dimen/main_img_margin"
        android:background="#992"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/iv_user"
            android:background="#8f2299"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>