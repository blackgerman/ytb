<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_result_item_height"
    android:paddingLeft="@dimen/item_margin"
    android:paddingRight="@dimen/item_margin"
    android:orientation="horizontal"
    android:gravity="top"
    android:background="?android:selectableItemBackground"
    >

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/imageview"
        android:layout_width="10dp"
        android:background="#e28323"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="left|top"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="16sp"
            android:textColor="@color/text_main_black"
            android:text="Gold - Pentatonix (Kiiara Cover)"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_channel"
            android:text="PTX"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:textColor="@color/text_secondary_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_uploadtime_views"
            android:textSize="14sp"
            android:textColor="@color/text_secondary_gray"
            android:layout_marginTop="1dp"
            android:text="1个月前 - 630万次观看"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
